  "alerts": [
    {
      "id": "alert_score_behind",
      "name": "Score Behind Target",
      "condition": "current_score < (target_score - 5)",
      "severity": "WARNING",
      "action": "Notify team lead"
    },
    {
      "id": "alert_must_failures",
      "name": "MUST Test Failures",
      "condition": "must_tests_passing < 100",
      "severity": "CRITICAL",
      "action": "Block deployment + escalate"
    },
    {
      "id": "alert_phase_overrun",
      "name": "Phase Time Overrun",
      "condition": "current_week > phase_end_week",
      "severity": "HIGH",
      "action": "Architecture Board escalation"
    },
    {
      "id": "alert_logic_gaps_increasing",
      "name": "Logic-Gaps Increasing",
      "condition": "logic_gaps_delta > 0",
      "severity": "WARNING",
      "action": "Root cause analysis"
    },
    {
      "id": "alert_evidence_chain_broken",
      "name": "Evidence Chain Broken",
      "condition": "evidence_chain_valid == false",
      "severity": "CRITICAL",
      "action": "Immediate investigation + re-hash"
    }
  ],

  "visualization": {
    "charts": [
      {
        "id": "chart_score_progress",
        "type": "line",
        "title": "Compliance Score Over Time",
        "x_axis": "Date",
        "y_axis": "Score (0-100)",
        "series": [
          {"name": "Actual Score", "color": "#2ECC71"},
          {"name": "Target Score", "color": "#3498DB", "style": "dashed"}
        ]
      },
      {
        "id": "chart_phase_progress",
        "type": "gantt",
        "title": "Phase Timeline",
        "data_source": "phases",
        "show_dependencies": true
      },
      {
        "id": "chart_logic_gaps",
        "type": "bar",
        "title": "Logic-Gaps by Phase",
        "x_axis": "Phase",
        "y_axis": "Gap Count",
        "color_coding": "by_severity"
      },
      {
        "id": "chart_test_coverage",
        "type": "gauge",
        "title": "Test Coverage",
        "min": 0,
        "max": 100,
        "thresholds": [
          {"value": 80, "color": "#E74C3C"},
          {"value": 90, "color": "#F39C12"},
          {"value": 95, "color": "#2ECC71"}
        ]
      },
      {
        "id": "chart_deliverables",
        "type": "heatmap",
        "title": "Deliverable Status by Root",
        "x_axis": "Root Directory",
        "y_axis": "Deliverable",
        "color_scale": ["#E74C3C", "#F39C12", "#2ECC71"]
      }
    ]
  },

