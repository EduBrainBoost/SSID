      "description": "Code coverage metrics"
    },
    "evidence_hasher": {
      "command": "bash 02_audit_logging/utils/hash_all.sh --verify --json",
      "type": "command",
      "description": "Evidence chain validation"
    },
    "progress_tracker": {
      "command": "python3 02_audit_logging/utils/track_progress.py --json",
      "type": "command",
      "description": "Overall progress tracking"
    }
  },

